{
  "manifest_version": 3,
  "name": "Delivery Route Optimizer",
  "version": "2.0.1",
  "description": "Optimize delivery routes by extracting and organizing delivery data",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://cm.chasunamallny.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["ui.html", "static/*"],
      "matches": ["<all_urls>"]
    }
  ]
}